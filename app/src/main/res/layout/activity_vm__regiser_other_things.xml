<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VM_RegiserOtherThingsActivity">

    <LinearLayout
        android:background="@drawable/layout_border"
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btn_goOrigin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <TextView
            android:background="@drawable/layout_border"
            android:id="@+id/tv_notice1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/bmdohyeon_ttf"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:hint="문제 사진 이외의 추가 사진을 첨부해 주세요" />

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">


            <ImageView

                android:id="@+id/iv_picture1"
                android:onClick="changeAddFile"
                android:src="@drawable/img_attach_answer"
                android:scaleType="fitCenter"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/iv_picture2"
                android:onClick="changeAddFile"
                android:src="@drawable/img_attach_answer"
                android:scaleType="fitCenter"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/iv_picture3"
                android:onClick="changeAddFile"
                android:src="@drawable/img_attach_answer"
                android:scaleType="fitCenter"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1" />


        </LinearLayout>

        <TextView
            android:background="@drawable/layout_border"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_notice2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/bmdohyeon_ttf"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:hint="질문 내용을 상세히 기입 해 주세요" />

        <EditText
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/tv_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:fontFamily="@font/bmdohyeon_ttf"

             />




        <!--        <EditText-->
        <!--            android:layout_marginLeft="5dp"-->
        <!--            android:layout_marginRight="5dp"-->
        <!--            android:id="@+id/tv_contents"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="0dp"-->
        <!--            android:layout_weight="5"-->
        <!--            android:fontFamily="@font/bmdohyeon_ttf"-->
        <!--            android:textAlignment="center"-->
        <!--            android:hint="질문 내용을 적어주세요" />-->

    </LinearLayout>

    <Button
        android:onClick="loadAddInfo"
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="188dp"
        android:layout_marginBottom="3dp"
        android:backgroundTint="@color/colorLightSteelBlue"
        android:fontFamily="@font/bmdohyeon_ttf"
        android:text="추가"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginBottom="10dp" />

    <Button
        android:id="@+id/btn_goOrigin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="3dp"
        android:backgroundTint="@color/colorLightSteelBlue"
        android:fontFamily="@font/bmdohyeon_ttf"
        android:text="취소"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>