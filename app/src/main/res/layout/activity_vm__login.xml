<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VM_LoginActivity"
    android:background="#1097d0">

<!--    회원가입 버튼-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:padding="15dp">
        <ImageView
            android:id="@+id/signup_btn_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/signup_btn"

            app:layout_constraintRight_toLeftOf="@id/singup_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/singup_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="#fff"
            android:fontFamily="@font/nanumsquaure_r"
            android:textSize="15dp"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
<!--    회원가입 버튼 끝-->

<!--    로고 부분-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_logo_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_top_container"
        app:layout_constraintBottom_toTopOf="@+id/login_data_container"

        android:paddingBottom="10dp"
        android:paddingTop="10dp">
        <ImageView
            android:id="@+id/iv_mainLogo"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:src="@drawable/launcher_logo"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Visual Math"
            android:fontFamily="@font/nanumsquaure_eb"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textAlignment="center"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_mainLogo"
            android:layout_marginTop="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--    로고 부분 끝-->

<!--    입력&버튼 부분-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_data_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_logo_container"
        app:layout_constraintBottom_toBottomOf="parent"

        android:padding="30dp">
<!--        자동로그인-->
        <CheckBox
            android:id="@+id/cb_AutoLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:button="@drawable/checkbox_custom"

            android:text="  자동 로그인"
            android:fontFamily="@font/nanumsquaure_b"
            android:textColor="#ffffff"
            android:textSize="15dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
<!--        자동로그인 끝-->
        <EditText
            android:id="@+id/et_userID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_id_back"

            android:hint="아이디"
            android:textColorHint="#fff"
            android:fontFamily="@font/nanumsquaure_r"
            android:inputType="textPersonName"
            android:textSize="17dp"
            android:textColor="#fff"

            app:layout_constraintTop_toBottomOf="@+id/cb_AutoLogin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_marginTop="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"/>

        <EditText
            android:id="@+id/et_userPw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_id_back"

            android:hint="비밀번호"
            android:textColorHint="#fff"
            android:fontFamily="@font/nanumsquaure_r"
            android:inputType="textPassword"
            android:textSize="17dp"
            android:textColor="#fff"

            app:layout_constraintTop_toBottomOf="@+id/et_userID"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_marginTop="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"/>
        <Button
            android:onClick="clickLoginButton"
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_btn_back"

            android:text="로 그 인"
            android:textAlignment="center"
            android:textColor="#1097d0"
            android:fontFamily="@font/nanumsquaure_b"
            android:textSize="18dp"

            app:layout_constraintTop_toBottomOf="@+id/et_userPw"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_marginTop="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"/>

<!--        구분선-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login_line_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_login"
            app:layout_constraintBottom_toTopOf="@+id/google_framelayout">

            <View
                android:id="@+id/login_line_left"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#fff"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/login_or_text"

                android:layout_marginRight="15dp"/>
            <TextView
                android:id="@+id/login_or_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or"
                android:textSize="15dp"
                android:textColor="#fff"
                android:fontFamily="@font/nanumsquaure_r"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <View
                android:id="@+id/login_line_right"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#fff"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/login_or_text"

                android:layout_marginLeft="15dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
<!--        구분선 끝-->

<!--        구글 로그인-->
        <FrameLayout
            android:id="@+id/google_framelayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_line_container"
            app:layout_constraintBottom_toBottomOf="parent">
<!--            <com.google.android.gms.common.SignInButton-->
<!--                android:id="@+id/Google_Login"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_gravity="center"/>-->

<!--            기존 구글 버튼을 덮는 부분-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/google_Login_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/login_btn_back">
                <ImageView
                    android:id="@+id/google_logo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/google_logo"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="25dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="구글 로그인"

                    android:textAlignment="center"
                    android:textColor="#1097d0"
                    android:fontFamily="@font/nanumsquaure_b"
                    android:textSize="18dp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/google_logo"
                    app:layout_constraintRight_toRightOf="parent"
                    android:gravity="center"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

<!--        구글 로그인 끝-->
    </androidx.constraintlayout.widget.ConstraintLayout>
<!--    입력&버튼 부분 끝-->

</androidx.constraintlayout.widget.ConstraintLayout>