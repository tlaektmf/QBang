    <!--    검색창 부분-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/teacher_search_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <!--    검색창 상단바-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/teacher_search_input_lay"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#fff"
            android:elevation="5dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/teacher_search_sub_lay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/teacher_search_cancel_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                android:background="#f2f2f2"
                android:layout_marginLeft="15dp">
                <ImageView
                    android:id="@+id/teacher_search_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/search"
                    android:layout_marginLeft="10dp"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <EditText
                    android:id="@+id/teacher_search_editText"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:paddingLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:textSize="@dimen/search_text"
                    android:fontFamily="@font/nanumsquaure_r"

                    app:layout_constraintLeft_toRightOf="@+id/teacher_search_img"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:id="@+id/teacher_search_cancel_btn"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="취소"
                android:textSize="@dimen/cancel_text"
                style="?android:attr/borderlessButtonStyle"
                android:fontFamily="@font/nanumsquaure_b"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/teacher_search_sub_lay"
                android:layout_marginRight="10dp"
                android:paddingLeft="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--            검색창 상단바 끝-->

        <!--        검색창 리스트-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teacher_search_input_lay"
            android:background="#f2f2f4">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/teacher_searched_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_list_calendar"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="15dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--        검색창 리스트 끝-->
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--    검색창 부분 끝-->

    <!--    로딩 창 배경 어둡게, 프로그래스바-->
    <View
        android:id="@+id/cal_loading_back"
        android:clickable="true"
        android:background="#4D000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ProgressBar
        android:id="@+id/cal_loading_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleLarge"
        android:visibility="visible"
        android:layout_gravity="center"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>