<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VM_RegisterProblemActivity">

    <LinearLayout
        android:background="@drawable/layout_border"
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btn_goback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1.5"
            android:background="@null"
            android:fontFamily="@font/bmdohyeon_ttf"
            android:hint="문제 제목"
            android:textAlignment="center" />

        <Button
            android:background="@drawable/layout_border"
            android:id="@+id/btn_grade"
            android:onClick="changeGrade"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="학년 선택"
            android:fontFamily="@font/bmdohyeon_ttf"
            />


        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_file_problem"
                android:onClick="changeProblemFile"
                android:src="@drawable/img_attach_problem"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
            
            <Button
                android:onClick="addOther"
                android:layout_marginBottom="5dp"
                android:background="@drawable/layout_border"
                android:id="@+id/btn_goOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_question"
                android:fontFamily="@font/bmdohyeon_ttf"/>


        </LinearLayout>

<!--        <EditText-->
<!--            android:layout_marginLeft="5dp"-->
<!--            android:layout_marginRight="5dp"-->
<!--            android:id="@+id/tv_contents"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_weight="5"-->
<!--            android:fontFamily="@font/bmdohyeon_ttf"-->
<!--            android:textAlignment="center"-->
<!--            android:hint="질문 내용을 적어주세요" />-->

    </LinearLayout>

    <Button
        android:onClick="registerProblem"
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginBottom="3dp"
        android:backgroundTint="@color/colorLightSteelBlue"
        android:fontFamily="@font/bmdohyeon_ttf"
        android:text="문제 등록"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_goback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginBottom="10dp" />

    <Button
        android:onClick="cancel"
        android:id="@+id/btn_goback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="3dp"
        android:backgroundTint="@color/colorLightSteelBlue"
        android:fontFamily="@font/bmdohyeon_ttf"
        android:text="취소"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>