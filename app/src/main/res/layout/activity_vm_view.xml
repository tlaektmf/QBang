<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".activity.VM_ViewActivity"
    android:background="#000">

<!--    상단 현재 화면 닫기-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pv_close_btn_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp">

        <Button
            android:id="@+id/pv_close_btn"
            android:layout_width="@dimen/close_button_size"
            android:layout_height="@dimen/close_button_size"
            android:background="@drawable/pv_close_btn"
            android:onClick="cancel"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--    상단 현재 화면 닫기 끝-->

    <com.github.chrisbanes.photoview.PhotoView
        android:visibility="visible"
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:scaleType="fitCenter"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pv_close_btn_container"
        app:layout_constraintBottom_toTopOf="@+id/pv_btn_container"/>

    <SurfaceView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/surface_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pv_close_btn_container"
        app:layout_constraintBottom_toTopOf="@+id/pv_btn_container"/>

    <VideoView
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/iv_video"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pv_close_btn_container"
        app:layout_constraintBottom_toTopOf="@+id/pv_btn_container"/>

<!--    버튼 담는 곳-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pv_btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <!--    사진촬영 버튼-->

        <Button
            android:id="@+id/ib_camera"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/video_check"
            android:onClick="send"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"/>
        <Button
            android:visibility="gone"
            android:id="@+id/btn_play"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="videoStart"
            android:background="@drawable/play"
            />

        <Button
            android:visibility="gone"
            android:id="@+id/btn_start_record"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="startRecord"
            android:background="@drawable/play"
            />

        <Button
            android:visibility="gone"
            android:id="@+id/btn_finish_record"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="finishRecord"
            android:background="@drawable/stop"
            />

        <Button
            android:onClick="vidoStop"
            android:visibility="gone"
            android:id="@+id/btn_stop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/stop"
            />
        <Button
            android:id="@+id/ib_repick"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:onClick="rePick"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="20dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
<!--    버튼 담는 곳 끝-->

</androidx.constraintlayout.widget.ConstraintLayout>