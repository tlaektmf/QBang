<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="missingPrefix"
    android:background="#f2f2f4">
    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scale_base_width="200"
        app:scale_base_height="300"
        android:layout_centerInParent="true">

        <fragment
            android:layout_marginTop="55dp"
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/mobile_navigation"
            app:scale_left="0"
            app:scale_top="0"
            app:scale_width="200"
            app:scale_height="300"
            android:layout_gravity="center"
            android:background="#ff0000"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>
    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_top_back"
        app:scale_base_width="200"
        app:scale_base_height="35"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/ib_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/home_top_left"

            app:scale_left="5"
            app:scale_top="2"
            app:scale_width="22"
            app:scale_height="22"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영 상   수 학"
            android:textColor="@color/colorBlack"
            app:scale_textsize="12"
            android:gravity="center"
            android:fontFamily="@font/nanumsquaure_eb"

            app:scale_left="64"
            app:scale_top="3"
            app:scale_width="70"
            app:scale_height="22"/>

        <ImageButton
            android:id="@+id/ib_alarm"
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/home_top_right"

            app:scale_left="175"
            app:scale_top="4"
            app:scale_width="20"
            app:scale_height="20"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>



        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_nav_back"
            android:paddingTop="15dp"
            app:itemIconTint="@drawable/bottom_nav_selec"
            app:itemTextColor="@drawable/bottom_nav_selec"
            app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>

