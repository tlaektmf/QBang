<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/teacher_content_title"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"

            android:fontFamily="@font/nanumsquaure_b"
            android:textColor="#016a96"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/teacher_content_detail"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"

            android:fontFamily="@font/nanumsquaure_r"
            android:textColor="#404040"
            android:textSize="@dimen/alarm_text"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/alarm_line_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#e6e6e6"/>
</LinearLayout>