<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="missingPrefix">

    <LinearLayout
        android:layout_width="225dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <ImageView
            android:id="@+id/teacher_content_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/home_top_left"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/teacher_content_title"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"

            android:fontFamily="@font/nanumsquaure_b"
            android:text="교육청 1"
            android:textColor="#404040"
            android:textSize="17dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/teacher_content_detail"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"

            android:fontFamily="@font/nanumsquaure_b"
            android:text="문제 내용"
            android:textColor="#404040"
            android:textSize="17dp"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_marginRight="13dp"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/list_underbar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"/>
</LinearLayout>