<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.visualstudy.visualmath">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <dist:module dist:instant="true" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <dist:module dist:instant="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.visualstudy.visualmath.activity.VM_ChatItemViewActivity"
            android:theme="@style/AppTheme.blackStatusBar"></activity>
        <activity
            android:name="com.visualstudy.visualmath.activity.VM_PhotoViewActivity"
            android:theme="@style/AppTheme.blackStatusBar" />
        <activity
            android:name="com.visualstudy.visualmath.activity.VM_ViewActivity"
            android:theme="@style/AppTheme.blackStatusBar" />
        <activity
            android:name="com.visualstudy.visualmath.activity.VM_ProblemBoxActivity"
            android:theme="@style/AppTheme.notitlebar" />
        <activity
            android:name="com.visualstudy.visualmath.activity.VM_RegisterUserActivity"
            android:theme="@style/AppTheme.blueStatusBar_notitle" />
        <activity
            android:name="com.visualstudy.visualmath.activity.VM_RegiserOtherThingsActivity"
            android:theme="@style/AppTheme.notitlebar" />
        <activity
            android:name="com.visualstudy.visualmath.activity.VM_FullViewActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="com.visualstudy.visualmath.VM_RegisterProblemActivity" />
        <activity
            android:name="com.visualstudy.visualmath.activity.VM_TeacherSolveProblemActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.visualstudy.visualmath.activity.VM_ProblemListActivity"
            android:theme="@style/AppTheme.notitlebar" />
        <activity
            android:name="com.visualstudy.visualmath.activity.TeacherItemListActivity"
            android:theme="@style/AppTheme.notitlebar" />
        <activity android:name="com.visualstudy.visualmath.activity.TeacherHomeActivity" />
        <activity
            android:name="com.visualstudy.visualmath.activity.VM_SettingsActivity"
            android:label="@string/title_activity_vm__settings" />
        <activity android:name="com.visualstudy.visualmath.activity.VM_WebViewActivity" />
        <activity
            android:name="com.visualstudy.visualmath.activity.ItemListActivity"
            android:label="@string/title_item_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.visualstudy.visualmath.activity.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName="com.visualstudy.visualmath.activity.ItemListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.visualstudy.visualmath.activity.ItemListActivity" />
        </activity>
        <activity
            android:name="com.visualstudy.visualmath.activity.HomeActivity"
            android:label="@string/title_activity_home"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="com.visualstudy.visualmath.activity.VM_AutoLoginCheckActivity"
            android:theme="@style/AppTheme.blueStatusBar" />
        <activity
            android:name="com.visualstudy.visualmath.activity.VM_LoginActivity"
            android:theme="@style/AppTheme.blueStatusBar" />
        <activity
            android:name="com.visualstudy.visualmath.activity.VM_LauncherActivity"
            android:theme="@style/AppTheme.blueStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.visualstudy.visualmath.activity.MainActivity" /> <!-- 사진 촬영을 위한 provide -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.visualstudy.visualmath.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>